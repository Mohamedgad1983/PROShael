{
  "name": "browser-automation-mcp-server",
  "version": "1.0.0",
  "description": "MCP Server for browser automation using Playwright and Chrome DevTools Protocol",
  "type": "module",
  "main": "build/index.js",
  "bin": {
    "browser-automation-mcp": "./build/index.js"
  },
  "scripts": {
    "build": "tsc && echo Build complete",
    "dev": "tsc --watch",
    "start": "node build/index.js",
    "prepare": "npm run build",
    "test": "node --test",
    "install-browsers": "playwright install chromium"
  },
  "keywords": [
    "mcp",
    "browser-automation",
    "playwright",
    "chrome-devtools",
    "automation"
  ],
  "author": "Al-Shuail Development Team",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.4",
    "playwright": "^1.48.2",
    "chrome-remote-interface": "^0.33.2",
    "puppeteer-core": "^23.5.0"
  },
  "devDependencies": {
    "@types/node": "^22.9.0",
    "typescript": "^5.6.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
