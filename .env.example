# Al-Shuail Family Management System - Environment Configuration Template
# Copy this file to .env and fill in your actual values
#
# ⚠️ SECURITY WARNING: Never commit actual .env files to version control
# ⚠️ This file contains templates - replace with real values

# ================================
# PROJECT INFORMATION
# ================================
PROJECT_NAME=Al-Shuail Family Management System
PROJECT_VERSION=1.0.0
PROJECT_ENVIRONMENT=development

# ================================
# DATABASE CONFIGURATION (Supabase)
# ================================
# Get these from your Supabase project dashboard
SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_KEY=your-anon-public-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# Alternative PostgreSQL connection (if not using Supabase)
DATABASE_URL=postgresql://username:password@localhost:5432/alshuail_db

# ================================
# AUTHENTICATION & SECURITY
# ================================
# Generate a strong random string for JWT signing
JWT_SECRET=your-super-secure-jwt-secret-minimum-256-bits
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# Session secret for Express sessions
SESSION_SECRET=your-session-secret-key

# Encryption key for sensitive data
ENCRYPTION_KEY=your-32-character-encryption-key

# ================================
# API CONFIGURATION
# ================================
# Backend API settings
PORT=3001
HOST=localhost
NODE_ENV=development

# CORS settings - Frontend URLs allowed to access API
FRONTEND_URL=http://localhost:3002
ALLOWED_ORIGINS=http://localhost:3002,http://localhost:3000

# API Rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ================================
# FRONTEND CONFIGURATION
# ================================
# React app environment variables (must start with REACT_APP_)
REACT_APP_API_URL=http://localhost:3001
REACT_APP_ENV=development
REACT_APP_VERSION=1.0.0

# Frontend port (if different from default 3000)
FRONTEND_PORT=3002

# ================================
# REDIS CONFIGURATION (Optional)
# ================================
# For session storage and caching
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your-redis-password
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# ================================
# FILE UPLOAD & STORAGE
# ================================
# Maximum file upload size (in bytes)
MAX_FILE_SIZE=10485760

# Upload directories
UPLOAD_DIR=./uploads
TEMP_DIR=./temp

# ================================
# EMAIL CONFIGURATION (Future)
# ================================
# SMTP settings for email notifications
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
EMAIL_FROM=noreply@alshuail.com

# ================================
# SMS CONFIGURATION (Future)
# ================================
# For registration tokens and notifications
SMS_PROVIDER=twilio
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# ================================
# ISLAMIC CALENDAR SETTINGS
# ================================
# Timezone for Islamic calendar calculations
TZ=Asia/Riyadh
HIJRI_ADJUSTMENT=0

# ================================
# LOGGING CONFIGURATION
# ================================
# Log level: error, warn, info, debug
LOG_LEVEL=info
LOG_FILE=./logs/app.log
ERROR_LOG_FILE=./logs/error.log

# ================================
# MONITORING & ANALYTICS (Optional)
# ================================
# Application monitoring
SENTRY_DSN=your-sentry-dsn-url
ANALYTICS_ID=your-analytics-id

# Health check intervals
HEALTH_CHECK_INTERVAL=30000
DATABASE_HEALTH_CHECK_TIMEOUT=5000

# ================================
# DOCKER & DEPLOYMENT
# ================================
# Docker registry for CI/CD
DOCKER_REGISTRY=your-registry.com
DOCKER_USERNAME=your-docker-username
DOCKER_PASSWORD=your-docker-password

# Deployment environments
STAGING_API_URL=https://staging-api.alshuail.com
PROD_API_URL=https://api.alshuail.com
STAGING_FRONTEND_URL=https://staging.alshuail.com
PROD_FRONTEND_URL=https://alshuail.com

# ================================
# CI/CD SECRETS (GitHub Actions)
# ================================
# These should be set in GitHub repository secrets, not in .env files

# Vercel deployment (Frontend)
# VERCEL_TOKEN=your-vercel-token
# VERCEL_ORG_ID=your-vercel-org-id
# VERCEL_PROJECT_ID=your-vercel-project-id

# Railway deployment (Backend)
# RAILWAY_TOKEN=your-railway-token
# RAILWAY_STAGING_PROJECT_ID=your-staging-project-id
# RAILWAY_PRODUCTION_PROJECT_ID=your-production-project-id

# ================================
# DEVELOPMENT TOOLS
# ================================
# Enable/disable development features
DEBUG=false
MOCK_DATA=false
SEED_DATABASE=false

# Development server settings
HOT_RELOAD=true
LIVE_RELOAD=true

# ================================
# SECURITY HEADERS & FEATURES
# ================================
# Enable security middleware
ENABLE_HELMET=true
ENABLE_CORS=true
ENABLE_RATE_LIMITING=true

# Content Security Policy
CSP_REPORT_URI=/api/csp-report
CSP_REPORT_ONLY=false

# ================================
# ARABIC & RTL SUPPORT
# ================================
# Default language and direction
DEFAULT_LANGUAGE=ar
DEFAULT_DIRECTION=rtl
SUPPORTED_LANGUAGES=ar,en

# Font configuration for Arabic text
ARABIC_FONT_FAMILY=Noto Sans Arabic,Cairo,Amiri
ARABIC_FONT_WEIGHTS=300,400,500,600,700

# ================================
# BACKUP & MAINTENANCE
# ================================
# Database backup settings
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=your-backup-bucket

# Maintenance mode
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE=System under maintenance

# ================================
# PERFORMANCE OPTIMIZATION
# ================================
# Caching
CACHE_TTL=3600
ENABLE_REDIS_CACHE=true

# API response compression
ENABLE_COMPRESSION=true
COMPRESSION_LEVEL=6

# Static file serving
SERVE_STATIC_FILES=true
STATIC_FILE_MAX_AGE=86400

# ================================
# NOTES & INSTRUCTIONS
# ================================
# 1. Copy this file to .env: cp .env.example .env
# 2. Replace all placeholder values with actual credentials
# 3. Generate strong secrets using: openssl rand -hex 32
# 4. Never commit .env files to version control
# 5. Use different values for staging and production
# 6. Regularly rotate secrets and credentials
# 7. Test configuration with: npm run test:config