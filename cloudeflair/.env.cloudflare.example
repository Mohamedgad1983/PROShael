# Cloudflare Pages Environment Variables
# Copy this file to .env.cloudflare and fill in your actual values

# Cloudflare Account Settings
CLOUDFLARE_ACCOUNT_ID=your_account_id_here
CLOUDFLARE_API_TOKEN=your_api_token_here
CLOUDFLARE_EMAIL=your_email@example.com
CLOUDFLARE_ZONE_ID=your_zone_id_here

# Project Settings
CF_PAGES_PROJECT_NAME=alshuail-app
CF_PAGES_BRANCH=main
CF_PAGES_COMMIT_SHA=auto

# Build Environment
NODE_VERSION=20.11.1
NPM_VERSION=10.2.4
NODE_OPTIONS=--max-old-space-size=8192

# React App Environment Variables (Production)
REACT_APP_API_URL=https://api.alshuail.com
REACT_APP_SUPABASE_URL=https://your-project.supabase.co
REACT_APP_SUPABASE_ANON_KEY=your_supabase_anon_key_here
REACT_APP_ENV=production
REACT_APP_VERSION=$CF_PAGES_COMMIT_SHA
REACT_APP_CLOUDFLARE_ANALYTICS_TOKEN=your_analytics_token_here

# React App Environment Variables (Staging/Preview)
# Uncomment for staging deployments
# REACT_APP_API_URL=https://staging-api.alshuail.com
# REACT_APP_ENV=staging

# Build Configuration
GENERATE_SOURCEMAP=false
INLINE_RUNTIME_CHUNK=false
IMAGE_INLINE_SIZE_LIMIT=10000
ESLINT_NO_DEV_ERRORS=true
DISABLE_ESLINT_PLUGIN=false
FAST_REFRESH=true

# Cloudflare KV Namespaces
CF_KV_NAMESPACE_CACHE=your_cache_namespace_id
CF_KV_NAMESPACE_SESSIONS=your_sessions_namespace_id
CF_KV_NAMESPACE_CONFIG=your_config_namespace_id

# Cloudflare R2 Buckets
CF_R2_BUCKET_FILES=alshuail-files
CF_R2_BUCKET_RECEIPTS=alshuail-receipts
CF_R2_BUCKET_BACKUPS=alshuail-backups
CF_R2_ACCESS_KEY_ID=your_r2_access_key_id
CF_R2_SECRET_ACCESS_KEY=your_r2_secret_access_key

# Cloudflare D1 Database
CF_D1_DATABASE_NAME=alshuail-db
CF_D1_DATABASE_ID=your_database_id_here

# Cloudflare Workers AI
CF_AI_GATEWAY_URL=https://gateway.ai.cloudflare.com/v1/your_account_id/alshuail
CF_AI_API_TOKEN=your_ai_api_token_here

# Cloudflare Turnstile (CAPTCHA)
REACT_APP_TURNSTILE_SITE_KEY=your_turnstile_site_key
CF_TURNSTILE_SECRET_KEY=your_turnstile_secret_key

# Cloudflare Images
CF_IMAGES_ACCOUNT_ID=your_images_account_id
CF_IMAGES_API_TOKEN=your_images_api_token
CF_IMAGES_DELIVERY_URL=https://imagedelivery.net/your_account_hash

# Monitoring and Analytics
CF_LOGPUSH_ENABLED=false
CF_LOGPUSH_DESTINATION=r2://logs-bucket/
CF_RUM_TOKEN=your_rum_token_here
CF_ANALYTICS_TOKEN=your_analytics_token_here

# Security Settings
CF_WAF_ENABLED=true
CF_BOT_MANAGEMENT_ENABLED=true
CF_RATE_LIMITING_ENABLED=true
CF_DDOS_PROTECTION_LEVEL=high

# Cache Settings
CF_CACHE_TTL_DEFAULT=3600
CF_CACHE_TTL_STATIC=31536000
CF_CACHE_TTL_API=300
CF_BROWSER_CACHE_TTL=14400

# Custom Headers
CF_HEADER_X_FRAME_OPTIONS=DENY
CF_HEADER_X_CONTENT_TYPE_OPTIONS=nosniff
CF_HEADER_X_XSS_PROTECTION=1; mode=block
CF_HEADER_REFERRER_POLICY=strict-origin-when-cross-origin
CF_HEADER_PERMISSIONS_POLICY=camera=(), microphone=(), geolocation=()

# Feature Flags
CF_FEATURE_PWA_ENABLED=true
CF_FEATURE_OFFLINE_MODE=true
CF_FEATURE_PUSH_NOTIFICATIONS=false
CF_FEATURE_WEB_ANALYTICS=true
CF_FEATURE_ERROR_REPORTING=true

# Email Settings (for Workers)
CF_EMAIL_FROM=noreply@alshuail.com
CF_EMAIL_REPLY_TO=support@alshuail.com
CF_MAILCHANNELS_API_KEY=your_mailchannels_api_key

# Deployment Settings
CF_DEPLOYMENT_TRIGGER_WEBHOOK=https://api.cloudflare.com/client/v4/pages/webhooks/deploy
CF_ROLLBACK_ON_ERROR=true
CF_AUTO_MINIFY_JS=true
CF_AUTO_MINIFY_CSS=true
CF_AUTO_MINIFY_HTML=true

# Arabic/RTL Specific Settings
CF_RTL_ENABLED=true
CF_DEFAULT_LANGUAGE=ar
CF_SUPPORTED_LANGUAGES=ar,en
CF_ARABIC_FONT_PRELOAD=true

# Performance Settings
CF_HTTP2_PUSH_ENABLED=true
CF_HTTP3_ENABLED=true
CF_EARLY_HINTS_ENABLED=true
CF_ROCKET_LOADER_ENABLED=false
CF_MIRAGE_ENABLED=true
CF_POLISH_ENABLED=lossless

# Development Settings (Local Testing)
CF_LOCAL_PROTOCOL=http
CF_LOCAL_HOST=127.0.0.1
CF_LOCAL_PORT=8788
CF_MINIFLARE_ENABLED=true

# Backup and Disaster Recovery
CF_BACKUP_ENABLED=true
CF_BACKUP_FREQUENCY=daily
CF_BACKUP_RETENTION_DAYS=30
CF_BACKUP_R2_BUCKET=alshuail-backups