{
  "name": "alshuail-family-management",
  "version": "1.0.0",
  "description": "Al-Shuail Family Management System - Premium Arabic RTL Admin Dashboard",
  "main": "index.js",
  "private": true,
  "workspaces": [
    "alshuail-admin-arabic",
    "alshuail-backend"
  ],
  "scripts": {
    "install:all": "npm install && npm install --prefix alshuail-admin-arabic && npm install --prefix alshuail-backend",
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:frontend": "cd alshuail-admin-arabic && npm start",
    "dev:backend": "cd alshuail-backend && npm run dev",
    "build": "npm run build:frontend && npm run build:backend",
    "build:frontend": "cd alshuail-admin-arabic && npm run build",
    "build:backend": "cd alshuail-backend && npm run build",
    "test": "npm run test:frontend && npm run test:backend",
    "test:frontend": "cd alshuail-admin-arabic && npm test",
    "test:backend": "cd alshuail-backend && npm test",
    "test:ci": "npm run test:ci:frontend && npm run test:ci:backend",
    "test:ci:frontend": "cd alshuail-admin-arabic && npm run test:ci",
    "test:ci:backend": "cd alshuail-backend && npm run test:ci",
    "lint": "npm run lint:frontend && npm run lint:backend",
    "lint:frontend": "cd alshuail-admin-arabic && npm run lint",
    "lint:backend": "cd alshuail-backend && npm run lint",
    "lint:fix": "npm run lint:fix:frontend && npm run lint:fix:backend",
    "lint:fix:frontend": "cd alshuail-admin-arabic && npm run lint:fix",
    "lint:fix:backend": "cd alshuail-backend && npm run lint:fix",
    "security-audit": "npm audit && npm run security-audit:frontend && npm run security-audit:backend",
    "security-audit:frontend": "cd alshuail-admin-arabic && npm audit",
    "security-audit:backend": "cd alshuail-backend && npm run security-audit",
    "health-check": "npm run health-check:backend && npm run health-check:frontend",
    "health-check:backend": "cd alshuail-backend && npm run health-check",
    "health-check:frontend": "cd alshuail-admin-arabic && npm run health-check",
    "docker:build": "npm run docker:build:backend && npm run docker:build:frontend",
    "docker:build:backend": "cd alshuail-backend && npm run docker:build",
    "docker:build:frontend": "cd alshuail-admin-arabic && npm run docker:build",
    "docker:dev": "docker-compose up -d",
    "docker:prod": "docker-compose -f docker-compose.prod.yml up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:clean": "docker-compose down -v --remove-orphans",
    "setup:env": "node setup-env.js create development",
    "setup:env:staging": "node setup-env.js create staging",
    "setup:env:production": "node setup-env.js create production",
    "validate:env": "node setup-env.js validate",
    "pre-commit": "npm run lint && npm run test:ci && npm run security-audit",
    "pre-deploy:staging": "npm run pre-commit && npm run build",
    "pre-deploy:production": "npm run pre-commit && npm run build && npm run health-check",
    "deploy:staging": "npm run pre-deploy:staging",
    "deploy:production": "npm run pre-deploy:production",
    "hijri-test": "cd alshuail-backend && npm run hijri-test",
    "rtl-check": "cd alshuail-admin-arabic && npm run rtl-check",
    "arabic-validation": "cd alshuail-admin-arabic && npm run arabic-validation",
    "logs:backend": "cd alshuail-backend && npm run logs",
    "logs:error": "cd alshuail-backend && npm run logs:error",
    "cleanup": "npm run cleanup:backend && npm run cleanup:frontend",
    "cleanup:backend": "cd alshuail-backend && npm run cleanup",
    "cleanup:frontend": "cd alshuail-admin-arabic && rm -rf build coverage",
    "update:deps": "npm update && cd alshuail-admin-arabic && npm update && cd ../alshuail-backend && npm update",
    "postinstall": "echo 'Al-Shuail Family Management System installed successfully!'"
  },
  "keywords": [
    "family-management",
    "admin-dashboard",
    "arabic",
    "rtl",
    "islamic-calendar",
    "react",
    "nodejs",
    "supabase",
    "premium"
  ],
  "author": "Al-Shuail Development Team",
  "license": "MIT",
  "dependencies": {
    "@executeautomation/playwright-mcp-server": "^1.0.6",
    "colors": "^1.4.0",
    "glob": "^11.0.3",
    "node-fetch": "^3.3.2",
    "playwright": "^1.55.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Mohamedgad1983/PROShael.git"
  },
  "bugs": {
    "url": "https://github.com/Mohamedgad1983/PROShael/issues"
  },
  "homepage": "https://github.com/Mohamedgad1983/PROShael#readme"
}
